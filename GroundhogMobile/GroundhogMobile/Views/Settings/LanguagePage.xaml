<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroundhogMobile.Views.Settings.LanguagePage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="btnLanguage" Clicked="btnLanguage_Clicked"/>
            <Button x:Name="btnSave" Text="{DynamicResource Key=Lang.ControlCommands.Save}" Clicked="btnSave_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>