<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroundhogMobile.Views.Settings.SettingsPage"
             BackgroundColor="{DynamicResource Main color}"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout x:Name="layout" VerticalOptions="Center">
            <Button Text="{DynamicResource Key=Lang.Settings.ConnectionString}" FontSize="20" Clicked="ButtonConnectString_Clicked"/>
            <Button Text="{DynamicResource Key=Lang.Settings.PlanningAndOptimizationRange}" FontSize="20" Clicked="ButtonPlanning_Clicked"/>
            <Button Text="{DynamicResource Key=Lang.Settings.ColorSchema}" FontSize="20" Clicked="ButtonColors_Clicked"/>
            <Button Text="{DynamicResource Key=Lang.Settings.SelectLanguage}" FontSize="20" Clicked="ButtonLanguage_Clicked"/>
            <Button Text="{DynamicResource Key=Lang.Syncronization.Download}" FontSize="20" Clicked="ButtonLoad_Clicked"/>
            <Button Text="{DynamicResource Key=Lang.Syncronization.Upload}" FontSize="20" Clicked="ButtonSend_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>