<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroundhogMobile.Views.Settings.ConnectionPage"
             BackgroundColor="{DynamicResource Main color}"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="editorStorage" HeightRequest="350"/>
            <Editor x:Name="editorLanguage" HeightRequest="350"/>
            <Button Text="{DynamicResource Key=Lang.ControlCommands.Save}" FontSize="20" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>