<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroundhogMobile.Views.Settings.BackupSettingsPage"
             BackgroundColor="{DynamicResource Main color}"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout x:Name="slOffset">
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="chbAutoCloudBackup" Margin="0, -3, 0, 0"/>
                <Label FontSize="20" TextColor="{DynamicResource Main text}" Text="{DynamicResource Key=Lang.Tasks.OffsetNextTasks}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="chbAutoLocalBackup" Margin="0, -3, 0, 0"/>
                <Label FontSize="20" TextColor="{DynamicResource Main text}" Text="{DynamicResource Key=Lang.Tasks.OffsetNextTasks}"/>
            </StackLayout>
            <Button Text="{DynamicResource Key=Lang.ControlCommands.Save}" FontSize="20" Margin="10, 20" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>