<Window x:Class="GroundhogDesktop.Views.Settings.LanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroundhogDesktop.Views.Settings"
        mc:Ignorable="d"
        Style="{DynamicResource ResourceKey='Window style'}"
        Title="{DynamicResource ResourceKey=Lang.Settings.SelectLanguage}"
        Height="140" Width="400" MinWidth="400" MinHeight="140">
    <Grid>
        <ComboBox Name="cbLanguage" Margin="10,10,10,0" FontSize="16" VerticalAlignment="Top"/>
        <Button Content="{DynamicResource ResourceKey=Lang.ControlCommands.Save}" HorizontalAlignment="Center" Height="35" Width="94" FontSize="16" VerticalAlignment="Top" Margin="0,59,0,0" Click="Button_Click"/>
    </Grid>
</Window>
