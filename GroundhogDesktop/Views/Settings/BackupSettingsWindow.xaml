<Window x:Class="GroundhogDesktop.Views.Settings.BackupSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroundhogDesktop.Views.Settings"
        mc:Ignorable="d"
        Style="{DynamicResource ResourceKey='Window style'}"
        Title="{DynamicResource ResourceKey=Lang.Backup.Backup}"
        Height="0" MinHeight="140" MaxHeight="140" Width="0" MinWidth="280">
    <Grid>
        <CheckBox Name="chbAutoCloudBackup" Content="{DynamicResource ResourceKey=Lang.Backup.AutoCloudBackup}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="chbAutoLocalBackup" Content="{DynamicResource ResourceKey=Lang.Backup.AutoLocalBackup}" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"/>
        <Button Content="{DynamicResource ResourceKey=Lang.ControlCommands.Save}" Margin="0,55,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="82" Click="Button_Click"  Height="35"/>
    </Grid>
</Window>
