<Window x:Class="GroundhogWindows.Views.Settings.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroundhogWindows"
        mc:Ignorable="d"
        Style="{DynamicResource ResourceKey='Window style'}"
        Title="{DynamicResource ResourceKey=Lang.Syncronization.EnterCode}"
        Height="0" MinHeight="100" Width="0" MinWidth="280">
    <Grid>
        <TextBox Name="textBox" Margin="10,10,10,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="{DynamicResource ResourceKey=Lang.Syncronization.Send}" Margin="0,33,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="82" Click="Button_Click" Height="35"/>

    </Grid>
</Window>
