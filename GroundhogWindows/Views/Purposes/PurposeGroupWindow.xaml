<Window x:Class="GroundhogWindows.Views.Purposes.PurposeGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroundhogWindows"
        mc:Ignorable="d"
        Style="{DynamicResource ResourceKey='Window style'}"
        Title="{DynamicResource ResourceKey=Lang.Purposes.PurposesGroup}" MinHeight="130" MinWidth="360" Height="130" Width="360">
    <Grid>
        <TextBox Name="textBoxName" Margin="121,14,28,0" Text="" TextWrapping="NoWrap"  VerticalAlignment="Top"/>
        <Label Content="{DynamicResource ResourceKey=Lang.Purposes.GroupName}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="{DynamicResource ResourceKey=Lang.ControlCommands.Save}" HorizontalAlignment="Center" Margin="0,0,0,15" VerticalAlignment="Bottom" Height="35" Width="80" Click="Button_Click"/>
    </Grid>
</Window>
