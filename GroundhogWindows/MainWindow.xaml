<Window x:Class="GroundhogWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroundhogWindows"
        xmlns:conv="clr-namespace:GroundhogWindows.Converters"
        mc:Ignorable="d"
        Title="Groundhog" Height="445" Width="800">
    <Window.Resources>
        <conv:DateTimeConverter x:Key="converter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Настройки">
                <MenuItem Header="Строка подключения" Click="MenuItemConnection_Click"/>
                <MenuItem Header="Дальность планирования и оптимизации" Click="MenuItemPlanning_Click"/>
            </MenuItem>
            <MenuItem Header="Синхронизация">
                <MenuItem Header="Загрузить" Click="MenuItemLoad_Click"/>
                <MenuItem Header="Отправить" Click="MenuItemUpload_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Column="0" Grid.Row="1" Margin="0,0,0,0">
            <TabItem Header="Список">
                <ScrollViewer>
                    <ListBox Name="listBoxDates" SelectionChanged="DateSelected">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <Label Content="{Binding Converter={StaticResource converter}, ConverterParameter=1}" FontSize="18"/>
                                    <Label Content="{Binding Converter={StaticResource converter}, ConverterParameter=0}" FontSize="14"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Календарь">
                <Viewbox>
                    <Calendar SelectedDatesChanged="DateSelected" SelectionMode="SingleDate" />
                </Viewbox>
            </TabItem>
        </TabControl>

        <ScrollViewer Margin="0,0,0,10" Grid.Column="1" Grid.Row="1">
            <ListBox Name="listBoxTasks" MouseDoubleClick="listBoxTasks_MouseDoubleClick">
                <ListBox.ContextMenu>
                    <ContextMenu DataContext="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget}">
                        <MenuItem Header="Изменить" Click="ContextMenuUpdate_Click"/>
                        <MenuItem Header="Удалить" Click="ContextMenuDelete_Click"/>
                        <MenuItem Header="Удалить все подобные задачи" Click="ContextMenuDeleteAll_Click" IsEnabled="{Binding Path=SelectedItem.Repeated}"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <CheckBox IsChecked="{Binding Path=Completed}" Unchecked="CheckBox_Checked" Checked="CheckBox_Checked">
                                <TextBlock FontSize="16" Text="{Binding Path=Text}" Foreground="{Binding Path=TextColor}" TextDecorations="{Binding Path=TextDecorations}"/>
                            </CheckBox>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <Button Content="Создать" Margin="0,0,25,18" VerticalAlignment="Bottom" Height="35" Click="ButtonAdd_Click" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Width="84"/>
    </Grid>
</Window>
